# vim: ft=sh

export install_type=river # base|desktop|river

export disk=/dev/nvme0n1
export disk_passwd='cryptroot' # comment to disable
export autologin=1 # comment to disable

export swapfile=1024 # MiB, comment to disable

export username=ange
export userpasswd='ange'
export rootpasswd='root' # comment to disable

export shell=bash

export hostname="$username-pc"

export tz=UTC # Europe/Paris
export locales='en_US' # 'en_US|fr_FR'
export lang=C
